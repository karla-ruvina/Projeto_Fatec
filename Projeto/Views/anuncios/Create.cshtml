@model Projeto.Models.anuncio

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal container">
    <h4>Anúncio</h4>
    <hr />
    <div class="form-group row mt-2">
        <label class="form-label">Descrição do Imóvel</label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.InfoImovel, new { style = "display: inline-block; margin: 0; padding: .2em; width: auto; min-width: 30em; max-width: 100%; height: auto; min-height: 10em; cursor:text; background-color: #eee; overflow:auto; resize:both;", @class = "form-control" })
        </div>
    </div>

    <div class="form-group row text-center mt-5">
        <div class="col-md-offset-2 col-md-12">
            <button type="submit" class="btn btn-primary btn-block salvar">Salvar</button>
            <button onclick="history.back()" class="btn btn-secondary btn-block">Voltar</button>
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
