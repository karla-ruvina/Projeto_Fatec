@model IEnumerable<Projeto.Models.reserva>

@{
    ViewBag.Title = "Index";
}


<div class="container">
    <div class="p-5">
        <h2>Minhas reservas</h2>
    </div>

    <table class="table">
        <tr>
            <th>
                Período
            </th>
            <th>
                Valor
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    De @Html.DisplayFor(modelItem => item.DataInicial) até  @Html.DisplayFor(modelItem => item.DataFinal)
                </td>
                <td>
                    @item.ValorTotal.ToString("C")
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
