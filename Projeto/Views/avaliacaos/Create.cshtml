@model Projeto.Models.avaliacao

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal container" style="padding: 0 3rem;">
    <br />
    <h4>Como foi sua estadia?</h4>
    <hr />

    <div class="form-group row mt-2">
        <div class="col-md-4">
            <label class="form-label">Usuário</label>
            @Html.TextBoxFor(model => model.IdUsuario, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            <label class="form-label">Reserva</label>
            @Html.TextBoxFor(model => model.IdReserva, new { @class = "form-control" })

        </div>
    </div>
    <div class="col-md-4">
        <div class="mt-3">
            <label class="form-label" style="display:block">Avaliação</label>
            @Html.TextAreaFor(model => model.Mensagem, new { style = "display: inline-block; margin: 0; padding: .2em; width: auto; min-width: 30em; max-width: 100%; height: auto; min-height: 10em; cursor:text; background-color: #eee; overflow:auto; resize:both;", @class = "form-control" })
        </div>
    </div>

    <div class="form-group row text-center mt-5">
        <div class="col-md-offset-2 col-md-12">
            <button type="submit" class="btn btn-primary btn-block salvar">Salvar</button>
            <button onclick="history.back()" class="btn btn-secondary btn-block">Voltar</button>
        </div>
    </div>
</div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
